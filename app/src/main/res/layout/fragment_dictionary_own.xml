<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="UnusedAttribute">

    <data>

        <import type="android.view.View" />
        <variable
                name="hasWords"
                type="boolean" />
        <variable
                name="clickListenerCloseFilter"
                type="android.view.View.OnClickListener"/>
        <variable
                name="clickListenerAddWord"
                type="android.view.View.OnClickListener"/>
        <variable
                name="viewModel"
                type="relaxeddd.englishnotify.ui.dictionary_own.ViewModelDictionaryOwn" />

    </data>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_dictionary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:visibility="@{hasWords ? View.VISIBLE : View.GONE}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

        <TextView
            android:id="@+id/text_dictionary_no_words"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="@string/no_words_own"
            android:textSize="@dimen/font_16"
            android:visibility="@{!hasWords ? View.VISIBLE : View.GONE}"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/button_dictionary_add_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:onClick="@{clickListenerAddWord}"
            android:src="@drawable/ic_plus"
            app:tint="@color/white"
            android:layout_marginBottom="@dimen/size_32"
            android:layout_marginEnd="@dimen/size_24"/>

        <LinearLayout
            android:id="@+id/card_view_dictionary_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorPrimary"
            android:elevation="@dimen/default_elevation"
            android:layout_marginTop="-4dp"
            android:visibility="gone">

            <TextView
                android:text="@android:string/ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/card_view_dictionary_filter_sort_by"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:onClick="@{clickListenerCloseFilter}"
                android:padding="@dimen/size_12"
                android:visibility="gone"/>

            <RelativeLayout
                android:id="@+id/container_dictionary_filter_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_8"
                android:onClick="@{viewModel.clickListenerFilterTags}">

                <TextView
                    android:id="@+id/text_dictionary_filter_tags"
                    android:text="@string/notification_categories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_14"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/size_32"
                    android:layout_marginTop="@dimen/size_16"
                    android:layout_marginBottom="@dimen/size_16"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/text_dictionary_filter_tags_values"
                    android:text='@{!viewModel.filterTags.isEmpty() ? viewModel.filterTags.toString() : ""}'
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="@{!viewModel.filterTags.isEmpty() ? View.VISIBLE : View.GONE}"
                    android:layout_below="@+id/text_dictionary_filter_tags"
                    android:textSize="@dimen/font_10"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/size_2"
                    android:layout_marginStart="@dimen/size_32"
                    android:layout_marginBottom="@dimen/size_12"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_8"
                android:onClick="@{viewModel.clickListenerSortBy}">

                <TextView
                    android:text="@string/sort_by"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_dictionary_sort_by"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_14"
                    android:layout_marginTop="@dimen/size_16"
                    android:layout_marginStart="@dimen/size_32"
                    android:layout_marginBottom="@dimen/size_16"
                    android:layout_marginEnd="@dimen/size_32"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/text_dictionary_sort_by_value"
                    android:ellipsize="end"
                    android:maxLines="1" />

                <TextView
                    android:id="@+id/text_dictionary_sort_by_value"
                    android:text="@{viewModel.sortByType.getTitle()}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginEnd="@dimen/size_32"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</layout>