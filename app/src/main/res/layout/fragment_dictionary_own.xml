<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />
        <variable
                name="hasWords"
                type="boolean" />
        <variable
                name="clickListenerCloseFilter"
                type="android.view.View.OnClickListener"/>
        <variable
                name="clickListenerAddOwnWord"
                type="android.view.View.OnClickListener"/>
        <variable
                name="viewModel"
                type="relaxeddd.englishnotify.ui.dictionary_own.ViewModelDictionaryOwn" />

    </data>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
                android:id="@+id/container_dictionary_exclude_filter"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_dictionary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:visibility="@{hasWords ? View.VISIBLE : View.GONE}"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

            <TextView
                    android:id="@+id/text_dictionary_no_words"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:text="@string/no_words_own"
                    android:textSize="@dimen/font_16"
                    android:visibility="@{!hasWords ? View.VISIBLE : View.GONE}"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/button_dictionary_own_add_word"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:onClick="@{clickListenerAddOwnWord}"
                    android:src="@drawable/ic_plus"
                    app:tint="@color/white"
                    android:layout_marginBottom="@dimen/size_32"
                    android:layout_marginEnd="@dimen/size_24"/>

        </RelativeLayout>

        <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_view_dictionary_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorPrimary"
                android:layout_marginTop="-4dp"
                app:cardElevation="@dimen/size_8"
                android:visibility="gone">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:text="@android:string/ok"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView"
                        app:layout_constraintTop_toBottomOf="@+id/card_view_dictionary_filter_sort_by"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/white"
                        android:onClick="@{clickListenerCloseFilter}"
                        android:padding="@dimen/size_12"
                        android:visibility="gone"/>

                <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_view_dictionary_filter_tags"
                        android:layout_width="match_parent"
                        style="@style/StyleCardView"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        android:onClick="@{viewModel.clickListenerFilterTags}"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:id="@+id/text_dictionary_filter_tags"
                                android:text="@string/notification_categories"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_14"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginStart="32dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="16dp"
                                android:layout_marginTop="16dp" app:layout_constraintVertical_bias="0.0"
                                android:maxLines="1"
                                android:ellipsize="end"/>

                        <TextView
                                android:id="@+id/text_dictionary_filter_tags_values"
                                android:text='@{!viewModel.filterTags.isEmpty() ? viewModel.filterTags.toString() : ""}'
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/font_10"
                                android:visibility="@{!viewModel.filterTags.isEmpty() ? View.VISIBLE : View.GONE}"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:textColor="@color/white"
                                app:layout_constraintTop_toBottomOf="@+id/text_dictionary_filter_tags"
                                app:layout_constraintStart_toStartOf="@+id/text_dictionary_filter_tags"
                                android:layout_marginBottom="16dp"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_view_dictionary_filter_sort_by"
                        android:layout_width="match_parent"
                        style="@style/StyleCardView"
                        android:onClick="@{viewModel.clickListenerSortBy}"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/card_view_dictionary_filter_tags"
                        app:layout_constraintStart_toStartOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:text="@string/sort_by"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/text_dictionary_sort_by"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_14"
                                android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginStart="32dp"
                                android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:ellipsize="end"
                                android:maxLines="1"/>

                        <TextView
                                android:text="@{viewModel.sortByType.getTitle()}"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:id="@+id/text_dictionary_sort_by_value" android:layout_marginEnd="32dp"
                                android:ellipsize="end"
                                android:maxLines="1"
                                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@+id/text_dictionary_sort_by"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </FrameLayout>

</layout>