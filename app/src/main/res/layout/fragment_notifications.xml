<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="relaxeddd.englishnotify.ui.notifications.ViewModelNotifications" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_view_notifications_enable"
                android:layout_width="match_parent"
                style="@style/StyleCardViewSettings"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:onClick="@{viewModel.clickListenerEnableNotifications}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:text="@string/enable_notifications"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:clickable="@{safeUnbox(viewModel.isEnableNotificationsClickable)}"
                        android:checked="@{viewModel.user.receiveNotifications}"
                        android:onCheckedChanged="@{viewModel.checkedChangeListenerEnableNotifications}"
                        android:id="@+id/switch_notifications_enable"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:paddingStart="@dimen/size_16"
                        android:paddingEnd="@dimen/size_32" app:layout_constraintStart_toEndOf="@+id/imageView3"
                        android:layout_marginTop="4dp" android:layout_marginBottom="4dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_notifications_enable"
                        android:id="@+id/imageView3"
                        android:contentDescription="@string/ic_notifications_enable"
                        app:layout_constraintTop_toTopOf="@+id/switch_notifications_enable"
                        app:layout_constraintBottom_toBottomOf="@+id/switch_notifications_enable"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_view_notifications_tags"
                android:layout_width="match_parent"
                style="@style/StyleCardViewSettings"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:onClick="@{viewModel.clickListenerSelectCategory}"
                app:layout_constraintTop_toBottomOf="@+id/card_view_notifications_enable"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_categories_categories"
                        android:text="@string/notification_categories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_14"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/imageView4"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintVertical_bias="0.0"/>

                    <TextView
                            android:text="@{viewModel.selectedTagLiveData}"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/text_notifications_categories_value"
                            android:textSize="@dimen/font_12"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:visibility="@{viewModel.user.selectedTag.isEmpty() ? View.GONE : View.VISIBLE}"
                            app:layout_constraintTop_toBottomOf="@+id/text_categories_categories"
                            app:layout_constraintStart_toStartOf="@+id/text_categories_categories"
                            android:layout_marginBottom="16dp"
                            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="16dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_categories"
                        android:contentDescription="@string/ic_categories"
                        android:id="@+id/imageView4" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_view_repeat_time"
                android:layout_width="match_parent"
                style="@style/StyleCardViewSettings"
                android:onClick="@{viewModel.clickListenerRepeatTime}"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_view_notifications_tags"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="@string/receive_notifications_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView6"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_14"
                        android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_bias="0.0"
                        app:layout_constraintStart_toEndOf="@+id/imageView5"/>

                    <TextView
                        android:text="@{viewModel.textRepeatTime}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_12"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:id="@+id/textView7"
                        app:layout_constraintTop_toBottomOf="@+id/textView6"
                        app:layout_constraintStart_toStartOf="@+id/textView6"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_time"
                        android:contentDescription="@string/ic_time"
                        android:id="@+id/imageView5" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_view_learn_language"
                android:layout_width="match_parent"
                style="@style/StyleCardViewSettings"
                android:onClick="@{viewModel.clickListenerLearnLanguage}"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_view_repeat_time"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="@string/notifications_language"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_notification_learn_language"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_14"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="16dp"
                        app:layout_constraintVertical_bias="0.0"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/imageView6"/>

                    <TextView
                        android:text="@{viewModel.textLearnLanguage}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_12"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:id="@+id/text_notification_learn_language_value"
                        app:layout_constraintTop_toBottomOf="@+id/text_notification_learn_language"
                        app:layout_constraintStart_toStartOf="@+id/text_notification_learn_language"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_language"
                        android:contentDescription="@string/ic_language"
                        android:id="@+id/imageView6" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_view_notifications_view"
                    android:layout_width="match_parent"
                    style="@style/StyleCardViewSettings"
                    android:onClick="@{viewModel.clickListenerNotificationsView}"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:visibility="@{safeUnbox(viewModel.isVisibleNotificationsView) == true ? View.VISIBLE : View.GONE}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/card_view_learn_language"
                    app:layout_constraintStart_toStartOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/text_notifications_view"
                            android:text="@string/notifications_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_14"
                            android:layout_marginTop="16dp"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginStart="16dp"
                            app:layout_constraintVertical_bias="0.0"
                            android:layout_marginBottom="16dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/image_view_notifications_view"/>

                    <TextView
                            android:id="@+id/text_notifications_view_value"
                            android:text="@{viewModel.textNotificationsView}"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_12"
                            android:maxLines="1"
                            android:ellipsize="end"
                            app:layout_constraintTop_toBottomOf="@+id/text_notifications_view"
                            app:layout_constraintStart_toStartOf="@+id/text_notifications_view"
                            android:layout_marginBottom="16dp"
                            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="16dp"/>

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_notifications_view"
                            android:contentDescription="@string/ic_notifications_view"
                            android:id="@+id/image_view_notifications_view" android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="16dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_view_notifications_show_only_one"
                android:layout_width="match_parent"
                style="@style/StyleCardViewSettings"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_view_notifications_view">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_notifications_show_only_one"
                        android:text="@string/show_only_one_last_notification"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:checked="@{safeUnbox(viewModel.isShowOnlyOneNotification)}"
                        android:onCheckedChanged="@{viewModel.checkedChangeListenerShowOnlyOneNotification}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:textSize="@dimen/font_12"
                        android:paddingStart="@dimen/size_16"
                        android:paddingEnd="@dimen/size_32" app:layout_constraintStart_toEndOf="@+id/image_notifications_show_only_one"
                        android:layout_marginTop="4dp" android:layout_marginBottom="4dp"/>

                    <ImageView
                        android:id="@+id/image_notifications_show_only_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_list"
                        android:contentDescription="@string/ic_notifications_show_only_one"
                        app:layout_constraintTop_toTopOf="@+id/switch_notifications_show_only_one"
                        app:layout_constraintBottom_toBottomOf="@+id/switch_notifications_show_only_one"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_view_notifications_night_time"
                android:layout_width="match_parent"
                style="@style/StyleCardViewSettings"
                android:onClick="@{viewModel.clickListenerNightTime}"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_view_notifications_show_only_one"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_notifications_night_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:text="@string/night_time"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_14"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/image_view_notifications_night_time"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0" />

                    <TextView
                        android:id="@+id/text_notifications_night_time_value"
                        android:text="@{@string/night_time_value(viewModel.timeStartOff, viewModel.timeEndOff)}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_12"
                        android:visibility="@{(safeUnbox(viewModel.timeDurationOffValue) > 0) ? View.VISIBLE : View.GONE}"
                        app:layout_constraintTop_toBottomOf="@+id/text_notifications_night_time"
                        app:layout_constraintStart_toStartOf="@+id/text_notifications_night_time"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_night_time"
                        android:contentDescription="@string/ic_night_time"
                        android:id="@+id/image_view_notifications_night_time" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_view_notifications_test"
                    android:layout_width="match_parent"
                    style="@style/StyleCardViewSettings"
                    android:onClick="@{viewModel.clickListenerTestNotifications}"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/card_view_notifications_night_time"
                    app:layout_constraintStart_toStartOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/text_notifications_test"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:text="@string/test_notifications_text"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_14"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/image_view_notifications_test"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.0" />

                    <TextView
                            android:id="@+id/text_notifications_test_value"
                            android:text="@{@string/test_notifications_left(viewModel.user.testCount)}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_12"
                            app:layout_constraintTop_toBottomOf="@+id/text_notifications_test"
                            app:layout_constraintStart_toStartOf="@+id/text_notifications_test"
                            android:layout_marginBottom="16dp"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_test"
                            android:contentDescription="@string/ic_send_test_notification"
                            android:id="@+id/image_view_notifications_test" android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="16dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <View android:layout_width="match_parent"
                  android:layout_height="@dimen/size_46"
                  android:layout_marginBottom="@dimen/size_8"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintTop_toBottomOf="@+id/card_view_notifications_test"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>