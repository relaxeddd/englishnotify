<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="clickListenerRepeatTime"
                type="android.view.View.OnClickListener"/>

        <variable
                name="clickListenerCheckTags"
                type="android.view.View.OnClickListener"/>

        <variable
                name="checkedChangeListenerEnableNotifications"
                type="android.widget.CompoundButton.OnCheckedChangeListener"/>

        <variable
                name="viewModel"
                type="com.example.vchechin.testapp.ui.notifications.ViewModelNotifications" />

        <variable
                name="listRepeatTime"
                type="String[]" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_light_2">

        <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_view_5"
                android:layout_width="match_parent"
                style="@style/StyleCardViewSettings"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <com.google.android.material.switchmaterial.SwitchMaterial
                        android:text="@string/enable_notifications"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:checked="@{viewModel.user.receiveNotifications}"
                        android:onCheckedChanged="@{checkedChangeListenerEnableNotifications}"
                        android:id="@+id/switch_notifications_enable" app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:paddingStart="@dimen/size_32"
                        android:paddingEnd="@dimen/size_32"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_view_4"
                android:layout_width="match_parent"
                style="@style/StyleCardViewSettings"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:onClick="@{clickListenerCheckTags}"
                app:layout_constraintTop_toBottomOf="@+id/card_view_5" app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:text="@string/notification_categories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_categories_categories"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_14"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="32dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="16dp"
                        android:layout_marginTop="16dp" app:layout_constraintVertical_bias="0.0"/>
                <TextView
                        android:text="@{viewModel.user.tagsSelected.toString()}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_notifications_categories_value"
                        android:textSize="@dimen/font_10"
                        android:maxLines="1"
                        android:ellipsize="end"
                        app:layout_constraintTop_toBottomOf="@+id/text_categories_categories"
                        app:layout_constraintStart_toStartOf="@+id/text_categories_categories"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_view_3"
                android:layout_width="match_parent"
                style="@style/StyleCardViewSettings"
                android:onClick="@{clickListenerRepeatTime}"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_view_4"
                app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:text="@string/receive_notifications_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView6"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_14"
                        android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="32dp"
                        android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                        android:text="@{listRepeatTime[viewModel.user.notificationsTimeType]}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue"
                        android:id="@+id/textView7" android:layout_marginEnd="32dp"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@+id/textView6"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                style="@style/StyleCardViewSettings"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/card_view_3"
                android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings" android:layout_marginTop="16dp"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
                        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="32dp"
                        android:textColor="@color/black" android:id="@+id/textView9"/>
                <TextView
                        android:text="@{viewModel.user.email}"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:id="@+id/textView8"
                        android:textColor="@color/blue"
                        app:layout_constraintTop_toTopOf="@+id/textView9" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="32dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>