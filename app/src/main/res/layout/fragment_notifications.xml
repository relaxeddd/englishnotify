<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>
        <variable
                name="viewModel"
                type="relaxeddd.englishnotify.ui.notifications.ViewModelNotifications" />
        <variable
                name="listRepeatTime"
                type="String[]" />
        <variable
                name="listLearnLanguage"
                type="String[]" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_view_notifications_enable"
                android:layout_width="match_parent"
                style="@style/StyleCardViewSettings"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:onClick="@{viewModel.clickListenerEnableNotifications}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:text="@string/enable_notifications"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:clickable="@{safeUnbox(viewModel.isEnableNotificationsClickable)}"
                        android:checked="@{viewModel.user.receiveNotifications}"
                        android:onCheckedChanged="@{viewModel.checkedChangeListenerEnableNotifications}"
                        android:id="@+id/switch_notifications_enable"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:paddingStart="@dimen/size_16"
                        android:paddingEnd="@dimen/size_32" app:layout_constraintStart_toEndOf="@+id/imageView3"
                        android:layout_marginTop="4dp" android:layout_marginBottom="4dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_notifications_enable"
                        android:id="@+id/imageView3"
                        app:layout_constraintTop_toTopOf="@+id/switch_notifications_enable"
                        app:layout_constraintBottom_toBottomOf="@+id/switch_notifications_enable"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_view_notifications_tags"
                android:layout_width="match_parent"
                style="@style/StyleCardViewSettings"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:onClick="@{viewModel.clickListenerCheckTags}"
                app:layout_constraintTop_toBottomOf="@+id/card_view_notifications_enable"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_categories_categories"
                        android:text="@string/notification_categories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_14"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/imageView4"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintVertical_bias="0.0"/>

                    <TextView
                        android:text="@{viewModel.user.tagsSelected.toString()}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_notifications_categories_value"
                        android:textSize="@dimen/font_10"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:visibility="@{viewModel.user.tagsSelected.size() == 0 ? View.GONE : View.VISIBLE}"
                        app:layout_constraintTop_toBottomOf="@+id/text_categories_categories"
                        app:layout_constraintStart_toStartOf="@+id/text_categories_categories"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_categories"
                        android:id="@+id/imageView4" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_view_repeat_time"
                android:layout_width="match_parent"
                style="@style/StyleCardViewSettings"
                android:onClick="@{viewModel.clickListenerRepeatTime}"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_view_notifications_tags"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="@string/receive_notifications_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView6"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_14"
                        android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/imageView5"/>

                    <TextView
                        android:text="@{listRepeatTime[viewModel.user.notificationsTimeType]}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue"
                        android:id="@+id/textView7" android:layout_marginEnd="32dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/textView6"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_time"
                        android:id="@+id/imageView5" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_view_learn_language"
                android:layout_width="match_parent"
                style="@style/StyleCardViewSettings"
                android:onClick="@{viewModel.clickListenerLearnLanguage}"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_view_repeat_time"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="@string/notifications_language"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_notification_learn_language"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_14"
                        android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/imageView6"/>

                    <TextView
                        android:text="@{listLearnLanguage[viewModel.user.learnLanguageType]}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue"
                        android:id="@+id/text_notification_learn_language_value" android:layout_marginEnd="32dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/text_notification_learn_language"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_language"
                        android:id="@+id/imageView6" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <View android:layout_width="match_parent"
                  android:layout_height="@dimen/size_16"
                  android:layout_marginBottom="@dimen/size_8"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintTop_toBottomOf="@+id/card_view_learn_language"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>