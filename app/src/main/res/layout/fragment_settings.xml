<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="UnusedAttribute">

    <data>

        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="relaxeddd.englishnotify.ui.settings.ViewModelSettings" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/info_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

    <include layout="@layout/view_toolbar"/>

    <ScrollView
        android:id="@+id/scroll_view_settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/size_42"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/size_16"
                android:paddingBottom="@dimen/size_16"
                android:layout_marginTop="@dimen/size_8"
                android:orientation="horizontal"
                android:background="@color/card_view_color"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="@{viewModel.clickListenerStatistic}"
                android:elevation="@dimen/default_elevation">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_progress"
                    android:contentDescription="@string/ic_learn_stage_settings"
                    android:id="@+id/image_view_settings_statistic"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/size_16"/>

                <TextView
                    android:id="@+id/text_settings_statistic"
                    android:text="@string/own_words_statistic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_main"
                    android:textSize="@dimen/font_14"
                    android:layout_marginStart="@dimen/size_16"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/size_16"
                android:paddingBottom="@dimen/size_16"
                android:layout_marginTop="@dimen/size_8"
                android:orientation="horizontal"
                android:background="@color/card_view_color"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="@{viewModel.clickListenerAddMultipleWords}"
                android:elevation="@dimen/default_elevation">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_plus_multiple"
                    android:contentDescription="@string/ic_learn_stage_settings"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/size_16"/>

                <TextView
                    android:text="@string/add_multiple_words"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_main"
                    android:textSize="@dimen/font_14"
                    android:layout_marginStart="@dimen/size_16"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_8"
                android:paddingTop="@dimen/size_16"
                android:paddingBottom="@dimen/size_16"
                android:background="@color/card_view_color"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="@{viewModel.user != null ? viewModel.clickListenerSubscription : null}"
                android:alpha="@{viewModel.user != null ? 1f : 0.5f}"
                android:elevation="@dimen/default_elevation">

                <TextView
                    android:id="@+id/text_settings_subscribe"
                    android:text="@string/renew_subscription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_main"
                    android:textSize="@dimen/font_14"
                    android:layout_marginStart="@dimen/size_16"
                    android:layout_marginEnd="@dimen/size_8"
                    android:layout_toEndOf="@+id/image_settings_subscribe"
                    android:layout_toStartOf="@+id/image_settings_subscribe_info"/>

                <TextView
                    android:text="@{@string/subscription_days(viewModel.liveDataSubDays)}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_settings_sub_time"
                    android:textSize="@dimen/font_12"
                    android:layout_marginEnd="@dimen/size_8"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:visibility="@{(viewModel.user == null || viewModel.user.email.isEmpty()) ? View.GONE : View.VISIBLE}"
                    android:layout_marginStart="@dimen/size_16"
                    android:layout_toEndOf="@+id/image_settings_subscribe"
                    android:layout_toStartOf="@+id/image_settings_subscribe_info"
                    android:layout_below="@+id/text_settings_subscribe"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_sub"
                    android:contentDescription="@string/ic_subscription_settings"
                    android:id="@+id/image_settings_subscribe"
                    android:layout_marginStart="@dimen/size_16"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"/>

                <ImageView
                    android:id="@+id/image_settings_subscribe_info"
                    android:layout_width="@dimen/size_38"
                    android:layout_height="@dimen/size_38"
                    android:layout_marginEnd="@dimen/size_8"
                    app:srcCompat="@drawable/ic_info"
                    android:contentDescription="@string/ic_subscription_settings"
                    android:onClick="@{viewModel.clickListenerSubscriptionInfo}"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_8"
                android:paddingTop="@dimen/size_16"
                android:paddingBottom="@dimen/size_16"
                android:gravity="center_vertical"
                android:background="@color/card_view_color"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="@{viewModel.user != null ? viewModel.clickListenerSaveDictionary : null}"
                android:alpha="@{viewModel.user != null ? 1f : 0.5f}"
                android:elevation="@dimen/default_elevation">

                <ImageView
                    android:id="@+id/image_settings_save_ditionary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_save"
                    android:contentDescription="@string/ic_theme"
                    android:layout_marginStart="@dimen/size_16"/>

                <TextView
                    android:id="@+id/text_settings_save_dictionary"
                    android:text="@string/save_your_dictionary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_main"
                    android:textSize="@dimen/font_14"
                    android:layout_marginStart="@dimen/size_16"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_8"
                android:paddingTop="@dimen/size_16"
                android:paddingBottom="@dimen/size_16"
                android:background="@color/card_view_color"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="@{viewModel.user != null ? viewModel.clickListenerLoadDictionary : null}"
                android:alpha="@{viewModel.user != null ? 1f : 0.5f}"
                android:elevation="@dimen/default_elevation">

                <TextView
                    android:id="@+id/text_settings_load_dictionary"
                    android:text="@string/load_your_dictionary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_main"
                    android:textSize="@dimen/font_14"
                    android:layout_marginStart="@dimen/size_16"
                    android:layout_toEndOf="@+id/image_settings_load_dictionary"/>

                <TextView
                    android:id="@+id/text_settings_load_dictionary_value"
                    android:text="@{viewModel.textWordsSaved}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_12"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_toEndOf="@+id/image_settings_load_dictionary"
                    android:layout_below="@+id/text_settings_load_dictionary"
                    android:layout_marginStart="@dimen/size_16"
                    tools:text="@string/words_saved"/>

                <ImageView
                    android:id="@+id/image_settings_load_dictionary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_load"
                    android:contentDescription="@string/ic_categories"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/size_16"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_8"
                android:paddingTop="@dimen/size_16"
                android:paddingBottom="@dimen/size_16"
                android:background="@color/card_view_color"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="@{viewModel.clickListenerTrueAnswersToLearn}"
                android:elevation="@dimen/default_elevation">

                <TextView
                    android:id="@+id/text_settings_true_answers_to_learn"
                    android:text="@string/true_answers_number_to_learn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_main"
                    android:textSize="@dimen/font_11"
                    android:layout_marginStart="@dimen/size_16"
                    android:layout_toEndOf="@+id/image_settings_true_answers_to_learn"/>

                <TextView
                    android:id="@+id/text_settings_true_answers_to_learn_value"
                    android:text="@{viewModel.textTrueAnswersToLearn}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_12"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_toEndOf="@+id/image_settings_true_answers_to_learn"
                    android:layout_below="@+id/text_settings_true_answers_to_learn"
                    android:layout_marginStart="@dimen/size_16"
                    tools:text="3"/>

                <ImageView
                    android:id="@+id/image_settings_true_answers_to_learn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_learn"
                    android:contentDescription="@string/ic_categories"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/size_16"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_8"
                android:paddingTop="@dimen/size_16"
                android:paddingBottom="@dimen/size_16"
                android:background="@color/card_view_color"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="@{viewModel.clickListenerNotificationLearnPoints}"
                android:elevation="@dimen/default_elevation">

                <TextView
                    android:id="@+id/text_settings_notification_learn_points"
                    android:text="@string/notification_learn_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_main"
                    android:textSize="@dimen/font_11"
                    android:layout_marginStart="@dimen/size_16"
                    android:layout_toEndOf="@+id/image_settings_notification_learn_points"/>

                <TextView
                    android:id="@+id/text_settings_notification_learn_points_value"
                    android:text="@{viewModel.textNotificationsLearnPoints}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_12"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_toEndOf="@+id/image_settings_notification_learn_points"
                    android:layout_below="@+id/text_settings_notification_learn_points"
                    android:layout_marginStart="@dimen/size_16"
                    tools:text="1"/>

                <ImageView
                    android:id="@+id/image_settings_notification_learn_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_progress_2"
                    android:contentDescription="@string/ic_categories"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/size_16"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/size_4"
                android:paddingBottom="@dimen/size_4"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/size_8"
                android:background="@color/card_view_color"
                android:foreground="?android:attr/selectableItemBackground"
                android:elevation="@dimen/default_elevation">

                <ImageView
                    android:id="@+id/image_settings_secondary_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_secondary_progress"
                    android:onClick="@{viewModel.clickListenerSecondaryProgressInfo}"
                    android:contentDescription="@string/ic_notifications_show_only_one"
                    android:layout_marginStart="@dimen/size_16"
                    android:layout_gravity="center_vertical"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_settings_secondary_progress"
                    android:text="@string/enable_secondary_progress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/text_color_main"
                    android:checked="@{safeUnbox(viewModel.isEnableSecondaryProgress())}"
                    android:textSize="@dimen/font_12"
                    android:paddingStart="@dimen/size_16"
                    android:paddingEnd="@dimen/size_32"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/size_16"
                android:paddingBottom="@dimen/size_16"
                android:layout_marginTop="@dimen/size_8"
                android:background="@color/card_view_color"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="@{viewModel.clickListenerSwapProgress}"
                android:elevation="@dimen/default_elevation">

                <ImageView
                    android:id="@+id/image_settings_swap_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_swap_progress"
                    android:contentDescription="@string/ic_training_words_information"
                    android:layout_marginStart="@dimen/size_16"
                    android:scaleType="centerInside"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/text_settings_swap_progress"
                    android:text="@string/swap_main_and_secondary_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_main"
                    android:textSize="@dimen/font_14"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/size_16"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_8"
                android:paddingTop="@dimen/size_16"
                android:paddingBottom="@dimen/size_16"
                android:background="@color/card_view_color"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="@{viewModel.clickListenerTheme}"
                android:elevation="@dimen/default_elevation">

                <TextView
                    android:id="@+id/text_settings_theme"
                    android:text="@string/app_theme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_main"
                    android:textSize="@dimen/font_14"
                    android:layout_marginStart="@dimen/size_16"
                    android:layout_toEndOf="@+id/image_settings_theme"/>

                <TextView
                    android:text="@{viewModel.textTheme}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_settings_theme_value"
                    android:textSize="@dimen/font_12"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_toEndOf="@+id/image_settings_theme"
                    android:layout_below="@+id/text_settings_theme"
                    android:layout_marginStart="@dimen/size_16"/>

                <ImageView
                    android:id="@+id/image_settings_theme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_theme"
                    android:contentDescription="@string/ic_theme"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/size_16"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/size_4"
                android:paddingBottom="@dimen/size_4"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/size_8"
                android:background="@color/card_view_color"
                android:foreground="?android:attr/selectableItemBackground"
                android:elevation="@dimen/default_elevation">

                <ImageView
                    android:id="@+id/image_settings_progress_in_training"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_progress_3"
                    android:contentDescription="@string/ic_notifications_show_only_one"
                    android:layout_marginStart="@dimen/size_16"
                    android:layout_gravity="center_vertical"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_settings_progress_in_training"
                    android:text="@string/show_progress_in_training"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_main"
                    android:checked="@{safeUnbox(viewModel.isShowProgressInTraining())}"
                    android:textSize="@dimen/font_12"
                    android:paddingStart="@dimen/size_16"
                    android:paddingEnd="@dimen/size_32"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/size_4"
                android:paddingBottom="@dimen/size_4"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/size_8"
                android:background="@color/card_view_color"
                android:foreground="?android:attr/selectableItemBackground"
                android:elevation="@dimen/default_elevation">

                <ImageView
                    android:id="@+id/image_settings_voice_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_microphone"
                    android:contentDescription="@string/ic_notifications_show_only_one"
                    android:layout_marginStart="@dimen/size_16"
                    android:layout_gravity="center_vertical"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_settings_voice_input"
                    android:text="@string/is_show_voice_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_main"
                    android:checked="@{safeUnbox(viewModel.isShowVoiceInput())}"
                    android:textSize="@dimen/font_12"
                    android:paddingStart="@dimen/size_16"
                    android:paddingEnd="@dimen/size_32"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/size_4"
                android:paddingBottom="@dimen/size_4"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/size_8"
                android:background="@color/card_view_color"
                android:foreground="?android:attr/selectableItemBackground"
                android:elevation="@dimen/default_elevation">

                <ImageView
                    android:id="@+id/image_settings_design"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_navigation_design"
                    android:contentDescription="@string/ic_notifications_show_only_one"
                    android:layout_marginStart="@dimen/size_16"
                    android:layout_gravity="center_vertical"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_settings_design"
                    android:text="@string/is_old_navigation_design"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_main"
                    android:checked="@{safeUnbox(viewModel.isOldNavigationDesign())}"
                    android:textSize="@dimen/font_12"
                    android:paddingStart="@dimen/size_16"
                    android:paddingEnd="@dimen/size_32"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/size_16"
                android:paddingBottom="@dimen/size_16"
                android:layout_marginTop="@dimen/size_8"
                android:background="@color/card_view_color"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="@{viewModel.clickListenerRate}"
                android:elevation="@dimen/default_elevation">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_star"
                    android:id="@+id/imageView3"
                    android:contentDescription="@string/ic_rate_application"
                    android:layout_marginStart="@dimen/size_16"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/text_settings_rate"
                    android:text="@string/rate_app"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:textColor="@color/text_color_main"
                    android:textSize="@dimen/font_14"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="@dimen/size_16"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/size_16"
                android:paddingBottom="@dimen/size_16"
                android:layout_marginTop="@dimen/size_8"
                android:background="@color/card_view_color"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="@{viewModel.clickListenerReceiveHelp}"
                android:visibility="@{viewModel.isVisibleReceiveHelp ? View.VISIBLE : View.GONE}"
                android:elevation="@dimen/default_elevation">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_info"
                    android:contentDescription="@string/ic_training_words_information"
                    android:id="@+id/image_settings_receive_help"
                    android:layout_marginStart="@dimen/size_16"
                    android:scaleType="centerInside"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/text_settings_receive_help"
                    android:text="@string/if_notifications_not_receive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_main"
                    android:textSize="@dimen/font_14"
                    android:layout_marginStart="@dimen/size_16"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/size_16"
                android:paddingBottom="@dimen/size_16"
                android:layout_marginTop="@dimen/size_8"
                android:background="@color/card_view_color"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="@{viewModel.clickListenerInfoOwnWords}"
                android:elevation="@dimen/default_elevation">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_info_2"
                    android:contentDescription="@string/ic_own_words_information"
                    android:id="@+id/image_settings_info_own_words"
                    android:layout_marginStart="@dimen/size_16"
                    android:scaleType="centerInside"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/text_settings_info_own_words"
                    android:text="@string/own_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_main"
                    android:textSize="@dimen/font_14"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/size_16"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/size_16"
                android:paddingBottom="@dimen/size_16"
                android:layout_marginTop="@dimen/size_8"
                android:background="@color/card_view_color"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="@{viewModel.clickListenerInfoTraining}"
                android:elevation="@dimen/default_elevation">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_info_2"
                    android:contentDescription="@string/ic_training_words_information"
                    android:id="@+id/image_settings_info_training"
                    android:layout_marginStart="@dimen/size_16"
                    android:scaleType="centerInside"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/text_settings_info_training"
                    android:text="@string/words_training"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_main"
                    android:textSize="@dimen/font_14"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/size_16"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/size_16"
                android:paddingBottom="@dimen/size_16"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/size_8"
                android:background="@color/card_view_color"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="@{viewModel.clickListenerAppInfo}"
                android:elevation="@dimen/default_elevation">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_info_2"
                    android:contentDescription="@string/ic_application_info"
                    android:id="@+id/image_settings_app_info"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/size_16"
                    android:scaleType="centerInside"/>

                <TextView
                    android:id="@+id/text_settings_app_info"
                    android:text="@string/app_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_main"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/font_14"
                    android:layout_marginStart="@dimen/size_16"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_8"
                android:paddingTop="@dimen/size_16"
                android:paddingBottom="@dimen/size_16"
                android:background="@color/card_view_color"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="@{viewModel.user != null ? viewModel.clickListenerLogout : null}"
                android:alpha="@{viewModel.user != null ? 1f : 0.5f}"
                android:visibility="@{safeUnbox(viewModel.isShowGoogleAuth) ? View.GONE : View.VISIBLE}"
                android:elevation="@dimen/default_elevation">

                <TextView
                    android:id="@+id/text_settings_logout"
                    android:text="@string/logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_main"
                    android:textSize="@dimen/font_14"
                    android:layout_marginStart="@dimen/size_16"
                    android:layout_toEndOf="@+id/imageView2"/>

                <TextView
                    android:text="@{@string/you_sign_in_as(viewModel.user.email)}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_settings_login_email"
                    android:textSize="@dimen/font_12"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:visibility="@{(viewModel.user == null || viewModel.user.email.isEmpty()) ? View.GONE : View.VISIBLE}"
                    android:layout_toEndOf="@+id/imageView2"
                    android:layout_marginStart="@dimen/size_16"
                    android:layout_below="@+id/text_settings_logout"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_logout"
                    android:id="@+id/imageView2"
                    android:contentDescription="@string/ic_logout"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/size_16" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="@{safeUnbox(viewModel.isShowGoogleAuth) ? View.VISIBLE : View.GONE}"
                android:background="@color/background_main"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/size_16">

                <com.google.android.gms.common.SignInButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:buttonSize="wide"
                    android:onClick="@{viewModel.clickListenerGoogleAuth}"
                    android:layout_marginTop="@dimen/size_4"
                    android:layout_marginBottom="@dimen/size_4"/>

                <TextView
                    android:id="@+id/text_settings_privacy_policy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_main"
                    android:gravity="center"
                    android:visibility="@{safeUnbox(viewModel.isShowPrivacyPolicy) ? View.VISIBLE : View.GONE}"
                    android:background="@color/background_main"
                    android:text="@string/privacy_policy_text"
                    android:textSize="@dimen/font_12"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_46"
                android:layout_marginBottom="@dimen/size_8"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_view_settings_logout"/>

        </LinearLayout>

    </ScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
