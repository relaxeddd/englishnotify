                    android:layout_marginStart="@dimen/size_4"
                    android:layout_marginEnd="@dimen/size_4"
                    android:checked="@{safeUnbox(viewModel.result9) != 0 || safeUnbox(viewModel.result10) != 0 || safeUnbox(viewModel.current) == 9}"
