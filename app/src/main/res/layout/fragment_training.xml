            android:id="@+id/edit_text_training_answer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/enter_translation"
            android:layout_marginTop="@dimen/size_24"
            android:maxLength="100"
            android:visibility="@{safeUnbox(viewModel.isVisibleInputAnswer) == true ? View.VISIBLE : View.GONE}"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" android:layout_marginStart="32dp"
