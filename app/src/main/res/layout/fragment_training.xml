<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="relaxeddd.englishnotify.ui.training.ViewModelTraining"/>
        <variable
            name="clickListenerOk"
            type="android.view.View.OnClickListener"/>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UnusedAttribute"
        android:orientation="vertical">

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none" android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="UnusedAttribute">

                <LinearLayout
                    android:layout_width="@dimen/size_32"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="@dimen/size_4">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radio_button_training_1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_32"
                        android:checked="@{safeUnbox(viewModel.result1) != 0 || safeUnbox(viewModel.current) == 0}"
                        android:enabled="@{safeUnbox(viewModel.result1) != 0 || safeUnbox(viewModel.current) == 0}"
                        android:buttonTint="@{(safeUnbox(viewModel.result1) == 1) ? @color/green_success : ((safeUnbox(viewModel.result1) == 2) ? @color/red_wrong : @color/gray)}"
                        android:onClick="@{viewModel.clickListenerRadioButton1}"
                        android:visibility="@{safeUnbox(viewModel.wordsSize) > 0 ? View.VISIBLE : View.GONE}"/>

                    <View
                        android:id="@+id/view_training_current_1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_1"
                        android:background="@color/gray_light_3"
                        android:visibility="@{safeUnbox(viewModel.current) == 0 ? View.VISIBLE : View.INVISIBLE}"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/size_32"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/size_4"
                    android:gravity="center_horizontal">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radio_button_training_2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_32"
                        android:checked="@{safeUnbox(viewModel.result1) != 0 || safeUnbox(viewModel.result2) != 0 || safeUnbox(viewModel.current) == 1}"
                        android:enabled="@{safeUnbox(viewModel.result1) != 0 || safeUnbox(viewModel.result2) != 0 || safeUnbox(viewModel.current) == 1}"
                        android:buttonTint="@{(safeUnbox(viewModel.result2) == 1) ? @color/green_success : ((safeUnbox(viewModel.result2) == 2) ? @color/red_wrong : @color/gray)}"
                        android:onClick="@{viewModel.clickListenerRadioButton2}"
                        android:visibility="@{safeUnbox(viewModel.wordsSize) > 1 ? View.VISIBLE : View.GONE}"/>

                    <View
                        android:id="@+id/view_training_current_2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_1"
                        android:background="@color/gray_light_3"
                        android:visibility="@{safeUnbox(viewModel.current) == 1 ? View.VISIBLE : View.INVISIBLE}"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/size_32"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="@dimen/size_4">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radio_button_training_3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_32"
                        android:checked="@{safeUnbox(viewModel.result2) != 0 || safeUnbox(viewModel.result3) != 0 || safeUnbox(viewModel.current) == 2}"
                        android:enabled="@{safeUnbox(viewModel.result2) != 0 || safeUnbox(viewModel.result3) != 0 || safeUnbox(viewModel.current) == 2}"
                        android:buttonTint="@{(safeUnbox(viewModel.result3) == 1) ? @color/green_success : ((safeUnbox(viewModel.result3) == 2) ? @color/red_wrong : @color/gray)}"
                        android:onClick="@{viewModel.clickListenerRadioButton3}"
                        android:visibility="@{safeUnbox(viewModel.wordsSize) > 2 ? View.VISIBLE : View.GONE}"/>

                    <View
                        android:id="@+id/view_training_current_3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_1"
                        android:background="@color/gray_light_3"
                        android:visibility="@{safeUnbox(viewModel.current) == 2 ? View.VISIBLE : View.INVISIBLE}"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/size_32"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="@dimen/size_4">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radio_button_training_4"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_32"
                        android:checked="@{safeUnbox(viewModel.result3) != 0 || safeUnbox(viewModel.result4) != 0 || safeUnbox(viewModel.current) == 3}"
                        android:enabled="@{safeUnbox(viewModel.result3) != 0 || safeUnbox(viewModel.result4) != 0 || safeUnbox(viewModel.current) == 3}"
                        android:buttonTint="@{(safeUnbox(viewModel.result4) == 1) ? @color/green_success : ((safeUnbox(viewModel.result4) == 2) ? @color/red_wrong : @color/gray)}"
                        android:onClick="@{viewModel.clickListenerRadioButton4}"
                        android:visibility="@{safeUnbox(viewModel.wordsSize) > 3 ? View.VISIBLE : View.GONE}"/>

                    <View
                        android:id="@+id/view_training_current_4"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_1"
                        android:background="@color/gray_light_3"
                        android:visibility="@{safeUnbox(viewModel.current) == 3 ? View.VISIBLE : View.INVISIBLE}"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/size_32"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="@dimen/size_4">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radio_button_training_5"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_32"
                        android:checked="@{safeUnbox(viewModel.result4) != 0 || safeUnbox(viewModel.result5) != 0 || safeUnbox(viewModel.current) == 4}"
                        android:enabled="@{safeUnbox(viewModel.result4) != 0 || safeUnbox(viewModel.result5) != 0 || safeUnbox(viewModel.current) == 4}"
                        android:buttonTint="@{(safeUnbox(viewModel.result5) == 1) ? @color/green_success : ((safeUnbox(viewModel.result5) == 2) ? @color/red_wrong : @color/gray)}"
                        android:onClick="@{viewModel.clickListenerRadioButton5}"
                        android:visibility="@{safeUnbox(viewModel.wordsSize) > 4 ? View.VISIBLE : View.GONE}"/>

                    <View
                        android:id="@+id/view_training_current_5"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_1"
                        android:background="@color/gray_light_3"
                        android:visibility="@{safeUnbox(viewModel.current) == 4 ? View.VISIBLE : View.INVISIBLE}"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/size_32"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="@dimen/size_4">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radio_button_training_6"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_32"
                        android:checked="@{safeUnbox(viewModel.result5) != 0 || safeUnbox(viewModel.result6) != 0 || safeUnbox(viewModel.current) == 5}"
                        android:enabled="@{safeUnbox(viewModel.result5) != 0 || safeUnbox(viewModel.result6) != 0 || safeUnbox(viewModel.current) == 5}"
                        android:buttonTint="@{(safeUnbox(viewModel.result6) == 1) ? @color/green_success : ((safeUnbox(viewModel.result6) == 2) ? @color/red_wrong : @color/gray)}"
                        android:onClick="@{viewModel.clickListenerRadioButton6}"
                        android:visibility="@{safeUnbox(viewModel.wordsSize) > 5 ? View.VISIBLE : View.GONE}"/>

                    <View
                        android:id="@+id/view_training_current_6"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_1"
                        android:background="@color/gray_light_3"
                        android:visibility="@{safeUnbox(viewModel.current) == 5 ? View.VISIBLE : View.INVISIBLE}"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/size_32"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="@dimen/size_4">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radio_button_training_7"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_32"
                        android:checked="@{safeUnbox(viewModel.result6) != 0 || safeUnbox(viewModel.result7) != 0 || safeUnbox(viewModel.current) == 6}"
                        android:enabled="@{safeUnbox(viewModel.result6) != 0 || safeUnbox(viewModel.result7) != 0 || safeUnbox(viewModel.current) == 6}"
                        android:buttonTint="@{(safeUnbox(viewModel.result7) == 1) ? @color/green_success : ((safeUnbox(viewModel.result7) == 2) ? @color/red_wrong : @color/gray)}"
                        android:onClick="@{viewModel.clickListenerRadioButton7}"
                        android:visibility="@{safeUnbox(viewModel.wordsSize) > 6 ? View.VISIBLE : View.GONE}"/>

                    <View
                        android:id="@+id/view_training_current_7"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_1"
                        android:background="@color/gray_light_3"
                        android:visibility="@{safeUnbox(viewModel.current) == 6 ? View.VISIBLE : View.INVISIBLE}"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/size_32"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="@dimen/size_4">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radio_button_training_8"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_32"
                        android:checked="@{safeUnbox(viewModel.result7) != 0 || safeUnbox(viewModel.result8) != 0 || safeUnbox(viewModel.current) == 7}"
                        android:enabled="@{safeUnbox(viewModel.result7) != 0 || safeUnbox(viewModel.result8) != 0 || safeUnbox(viewModel.current) == 7}"
                        android:buttonTint="@{(safeUnbox(viewModel.result8) == 1) ? @color/green_success : ((safeUnbox(viewModel.result8) == 2) ? @color/red_wrong : @color/gray)}"
                        android:onClick="@{viewModel.clickListenerRadioButton8}"
                        android:visibility="@{safeUnbox(viewModel.wordsSize) > 7 ? View.VISIBLE : View.GONE}"/>

                    <View
                        android:id="@+id/view_training_current_8"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_1"
                        android:background="@color/gray_light_3"
                        android:visibility="@{safeUnbox(viewModel.current) == 7 ? View.VISIBLE : View.INVISIBLE}"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/size_32"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="@dimen/size_4">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radio_button_training_9"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_32"
                        android:checked="@{safeUnbox(viewModel.result8) != 0 || safeUnbox(viewModel.result9) != 0 || safeUnbox(viewModel.current) == 8}"
                        android:enabled="@{safeUnbox(viewModel.result8) != 0 || safeUnbox(viewModel.result9) != 0 || safeUnbox(viewModel.current) == 8}"
                        android:buttonTint="@{(safeUnbox(viewModel.result9) == 1) ? @color/green_success : ((safeUnbox(viewModel.result9) == 2) ? @color/red_wrong : @color/gray)}"
                        android:onClick="@{viewModel.clickListenerRadioButton9}"
                        android:visibility="@{safeUnbox(viewModel.wordsSize) > 8 ? View.VISIBLE : View.GONE}"/>

                    <View
                        android:id="@+id/view_training_current_9"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_1"
                        android:background="@color/gray_light_3"
                        android:visibility="@{safeUnbox(viewModel.current) == 8 ? View.VISIBLE : View.INVISIBLE}"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/size_32"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="@dimen/size_4"
                    android:layout_marginEnd="@dimen/size_4">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radio_button_training_10"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_32"
                        android:checked="@{safeUnbox(viewModel.result9) != 0 || safeUnbox(viewModel.result10) != 0 || safeUnbox(viewModel.current) == 9}"
                        android:enabled="@{safeUnbox(viewModel.result9) != 0 || safeUnbox(viewModel.result10) != 0 || safeUnbox(viewModel.current) == 9}"
                        android:buttonTint="@{(safeUnbox(viewModel.result10) == 1) ? @color/green_success : ((safeUnbox(viewModel.result10) == 2) ? @color/red_wrong : @color/gray)}"
                        android:onClick="@{viewModel.clickListenerRadioButton10}"
                        android:visibility="@{safeUnbox(viewModel.wordsSize) > 9 ? View.VISIBLE : View.GONE}"/>

                    <View
                        android:id="@+id/view_training_current_10"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_1"
                        android:background="@color/gray_light_3"
                        android:visibility="@{safeUnbox(viewModel.current) == 9 ? View.VISIBLE : View.INVISIBLE}"/>

                </LinearLayout>

            </LinearLayout>

        </HorizontalScrollView>

        <EditText
            android:id="@+id/edit_text_training_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:enabled="@{safeUnbox(viewModel.isVisibleInputAnswer) == true}"
            android:maxLength="100"
            android:alpha="@{safeUnbox(viewModel.isVisibleInputAnswer) == true ? 1f : 0.5f}"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:hint="@string/enter_translation"
            android:layout_marginTop="@dimen/size_24"
            android:importantForAutofill="no"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_training_confirm"
            android:text="@{viewModel.textButtonOk}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_24"
            android:layout_marginStart="@dimen/size_32"
            android:layout_marginEnd="@dimen/size_32"
            android:onClick="@{clickListenerOk}"
            android:visibility="@{safeUnbox(viewModel.isVisibleButtonOk) == true ? View.VISIBLE : View.INVISIBLE}"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_training_word"
                    android:text="@{viewModel.wordText}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="16dp"
                    android:textColor="@color/black"
                    android:paddingStart="@dimen/size_16"
                    android:paddingEnd="@dimen/size_16"
                    android:lines="3"
                    android:textSize="@dimen/font_18"
                    android:layout_marginTop="@dimen/size_16"/>

                <TextView
                    android:id="@+id/text_training_transcription"
                    android:text="@{viewModel.transcription}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_40"
                    android:layout_marginEnd="@dimen/size_16"
                    android:lines="2"
                    android:drawableEnd="@drawable/ic_volume"
                    android:gravity="center"
                    android:onClick="@{viewModel.clickListenerPlayWord}"
                    android:visibility="@{safeUnbox(viewModel.isVisibleTranscription) == true ? View.VISIBLE : View.INVISIBLE}"
                    android:textSize="@dimen/font_16"/>

                <TextView
                    android:id="@+id/text_training_translation"
                    android:text="@{viewModel.translation}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:visibility="@{safeUnbox(viewModel.isVisibleTranslation) == true ? View.VISIBLE : View.INVISIBLE}"
                    android:textSize="@dimen/font_20"
                    android:gravity="center_horizontal"
                    android:lines="4"
                    android:layout_marginStart="@dimen/size_16"
                    android:layout_marginEnd="@dimen/size_16"/>

                <TextView
                    android:id="@+id/text_training_answer"
                    android:text="@{viewModel.answer}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="@{safeUnbox(viewModel.isVisibleAnswer) == true ? View.VISIBLE : View.INVISIBLE}"
                    android:textSize="@dimen/font_18"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="@dimen/size_16"
                    android:layout_marginEnd="@dimen/size_16"
                    android:ellipsize="end"
                    android:lines="1"/>

                <TextView
                    android:id="@+id/text_training_result_text"
                    android:text="@{viewModel.resultText}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="@{safeUnbox(viewModel.isVisibleResultText) == true ? View.VISIBLE : View.INVISIBLE}"
                    android:textSize="@dimen/font_14"
                    android:lines="1"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="@dimen/size_16"
                    android:layout_marginEnd="@dimen/size_16"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</layout>