<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/info_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:ignore="ContentDescription">

    <include layout="@layout/view_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UnusedAttribute"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none" android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="UnusedAttribute">

                <LinearLayout
                    android:layout_width="@dimen/size_32"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="@dimen/size_4">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radio_button_training_1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_32"/>

                    <View
                        android:id="@+id/view_training_current_1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_1"
                        android:background="@color/gray_light_3"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/size_32"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/size_4"
                    android:gravity="center_horizontal">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radio_button_training_2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_32"/>

                    <View
                        android:id="@+id/view_training_current_2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_1"
                        android:background="@color/gray_light_3"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/size_32"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="@dimen/size_4">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radio_button_training_3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_32"/>

                    <View
                        android:id="@+id/view_training_current_3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_1"
                        android:background="@color/gray_light_3"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/size_32"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="@dimen/size_4">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radio_button_training_4"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_32"/>

                    <View
                        android:id="@+id/view_training_current_4"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_1"
                        android:background="@color/gray_light_3"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/size_32"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="@dimen/size_4">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radio_button_training_5"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_32"/>

                    <View
                        android:id="@+id/view_training_current_5"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_1"
                        android:background="@color/gray_light_3"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/size_32"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="@dimen/size_4">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radio_button_training_6"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_32"/>

                    <View
                        android:id="@+id/view_training_current_6"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_1"
                        android:background="@color/gray_light_3"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/size_32"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="@dimen/size_4">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radio_button_training_7"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_32"/>

                    <View
                        android:id="@+id/view_training_current_7"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_1"
                        android:background="@color/gray_light_3"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/size_32"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="@dimen/size_4">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radio_button_training_8"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_32"/>

                    <View
                        android:id="@+id/view_training_current_8"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_1"
                        android:background="@color/gray_light_3"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/size_32"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="@dimen/size_4">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radio_button_training_9"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_32"/>

                    <View
                        android:id="@+id/view_training_current_9"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_1"
                        android:background="@color/gray_light_3"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/size_32"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="@dimen/size_4"
                    android:layout_marginEnd="@dimen/size_4">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radio_button_training_10"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_32"/>

                    <View
                        android:id="@+id/view_training_current_10"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_1"
                        android:background="@color/gray_light_3"/>

                </LinearLayout>

            </LinearLayout>

        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/size_2"
            android:gravity="end|center_vertical">

            <TextView
                android:id="@+id/text_training_learned_statistic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Learned 46/100"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/size_4"/>

            <TextView
                android:id="@+id/text_training_learned_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+1"
                android:layout_gravity="end"
                android:textColor="@color/green_success"
                android:layout_marginEnd="@dimen/size_4"
                android:visibility="invisible"
                tools:visibility="visible"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/size_18"
            android:layout_marginHorizontal="@dimen/size_12">

            <EditText
                android:id="@+id/edit_text_training_answer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_main"
                android:inputType="textPersonName"
                android:maxLength="100"
                android:hint="@string/enter_translation"
                android:gravity="center"
                android:layout_weight="1"
                android:importantForAutofill="no"
                android:layout_marginStart="@dimen/size_20"
                android:layout_marginEnd="@dimen/size_20"/>

            <ImageView
                android:id="@+id/image_training_microphone"
                android:layout_width="@dimen/size_42"
                android:layout_height="@dimen/size_42"
                android:padding="@dimen/size_8"
                app:srcCompat="@drawable/ic_microphone"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/size_2"
                android:background="?android:attr/selectableItemBackground"/>

            <Spinner
                android:id="@+id/spinner_training_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <TextView
            android:id="@+id/text_training_result_animation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Learned!"
            android:gravity="center"
            android:textSize="@dimen/font_20"
            android:textColor="@color/green_success"
            android:visibility="invisible"
            tools:visibility="visible"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_training_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Answer"
            android:layout_marginTop="@dimen/size_16"
            android:layout_marginStart="@dimen/size_32"
            android:layout_marginEnd="@dimen/size_32"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_training_one_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="One more"
            android:layout_marginTop="@dimen/size_24"
            android:layout_marginStart="@dimen/size_32"
            android:layout_marginEnd="@dimen/size_32"
            tools:visibility="gone"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_training_listen"
                    android:layout_width="@dimen/size_48"
                    android:layout_height="@dimen/size_48"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/size_4"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@drawable/ic_volume"
                    android:contentDescription="@string/listening_training" />

                <TextView
                    android:id="@+id/text_training_word"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="16dp"
                    android:textColor="@color/text_color_main"
                    tools:text="precise"
                    android:paddingStart="@dimen/size_16"
                    android:paddingEnd="@dimen/size_16"
                    android:lines="3"
                    android:textSize="@dimen/font_18"
                    android:layout_marginTop="@dimen/size_4"/>

                <ProgressBar
                    android:id="@+id/progress_bar_training_word_stage"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="@dimen/size_120"
                    android:layout_height="wrap_content"
                    tools:progress="33"
                    android:layout_gravity="center_horizontal"/>

                <ProgressBar
                    android:id="@+id/progress_bar_training_word_stage_secondary"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="@dimen/size_120"
                    android:layout_height="wrap_content"
                    tools:progress="33"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/text_training_transcription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_40"
                    android:layout_marginEnd="@dimen/size_16"
                    tools:text="[precise]"
                    android:lines="2"
                    android:background="?android:attr/selectableItemBackground"
                    app:drawableEndCompat="@drawable/ic_volume"
                    android:gravity="center"
                    android:textSize="@dimen/font_16"/>

                <TextView
                    android:id="@+id/text_training_translation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="точный, четкий"
                    android:textColor="@color/text_color_main"
                    android:textSize="@dimen/font_20"
                    android:gravity="center_horizontal"
                    android:lines="4"
                    android:layout_marginStart="@dimen/size_16"
                    android:layout_marginEnd="@dimen/size_16"/>

                <TextView
                    android:id="@+id/text_training_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_18"
                    tools:text="your answer"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="@dimen/size_16"
                    android:layout_marginEnd="@dimen/size_16"
                    android:ellipsize="end"
                    android:lines="1"/>

                <TextView
                    android:id="@+id/text_training_result_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Incorrect"
                    android:textSize="@dimen/font_14"
                    android:lines="1"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="@dimen/size_16"
                    android:layout_marginEnd="@dimen/size_16"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
