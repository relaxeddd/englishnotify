        <TextView
            android:id="@+id/text_training_word"
            android:text="@{viewModel.wordText}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button_training_confirm"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:textColor="@color/black"
            android:paddingStart="@dimen/size_16"
            android:paddingEnd="@dimen/size_16"
            android:textSize="@dimen/font_28"
            android:layout_marginTop="@dimen/size_24"/>

        <LinearLayout
            android:id="@+id/container_training_transcription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="@{safeUnbox(viewModel.isVisibleTranscription) == true ? View.VISIBLE : View.GONE}"
            app:layout_constraintTop_toBottomOf="@+id/text_training_word"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="@dimen/size_8"
            android:gravity="center">

            <TextView
                android:id="@+id/text_training_transcription"
                android:text="@{viewModel.transcription}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_16"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/size_48"
                android:layout_height="@dimen/size_48"
                android:padding="@dimen/size_8"
                android:contentDescription="@string/ic_language"
                app:srcCompat="@drawable/ic_volume"
                android:onClick="@{viewModel.clickListenerPlayWord}"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/text_training_translation"
            android:text="@{viewModel.translation}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:visibility="@{safeUnbox(viewModel.isVisibleTranslation) == true ? View.VISIBLE : View.GONE}"
            android:textSize="@dimen/font_28"
            android:gravity="center_horizontal"
            android:paddingStart="@dimen/size_16"
            android:paddingEnd="@dimen/size_16"
            android:layout_marginTop="@dimen/size_12"
