<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>

        <variable
                name="viewModel"
                type="com.example.vchechin.testapp.ui.main.ViewModelMain" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher_round"
            app:layout_constraintWidth_percent="0.7" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/image_main_avatar"/>

        <TextView
            android:text="@{viewModel.email}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_main_email"
            app:layout_constraintStart_toStartOf="@+id/image_main_avatar"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/image_main_avatar"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:id="@+id/view" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/text_main_email" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:background="@color/gray"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>