<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="relaxeddd.englishnotify.ui.main.ViewModelMain"/>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UnusedAttribute">

        <fragment
            android:id="@+id/fragment_navigation_host"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:name="androidx.navigation.fragment.NavHostFragment"
            app:navGraph="@navigation/navigation_graph"
            app:defaultNavHost="true"
            app:layout_constraintBottom_toTopOf="@+id/barrier3"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_main_warning_notifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:onClick="@{viewModel.clickListenerWarningNotifications}"
            android:visibility="@{safeUnbox(viewModel.isShowWarningNotifications) ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toTopOf="@+id/container_main_warning_subscription">

            <TextView
                android:text="@string/notifications_not_receiving_enable"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_14"
                android:textColor="@color/blue"
                android:gravity="center"
                android:id="@+id/text_main_warning_notifications" android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/image_main_waring_notifications"
                app:layout_constraintHorizontal_chainStyle="packed"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_error"
                android:id="@+id/image_main_waring_notifications"
                android:scaleType="centerInside"
                android:contentDescription="@string/ic_main_warning_notifications"
                app:layout_constraintStart_toEndOf="@+id/text_main_warning_notifications"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/text_main_warning_notifications"
                app:layout_constraintTop_toTopOf="@+id/text_main_warning_notifications"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_main_warning_subscription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:onClick="@{viewModel.clickListenerWarningSubscription}"
            android:visibility="@{safeUnbox(viewModel.isShowWarningSubscription) ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toTopOf="@+id/container_main_sign_in">

            <TextView
                android:id="@+id/text_main_warning_subscription"
                android:text="@string/subscription_time_error"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_14"
                android:textColor="@color/blue"
                android:gravity="center"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/image_main_waring_subscription"
                app:layout_constraintHorizontal_chainStyle="packed"/>

            <ImageView
                android:id="@+id/image_main_waring_subscription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_error"
                android:scaleType="centerInside"
                android:contentDescription="@string/ic_main_warning_subscription"
                app:layout_constraintStart_toEndOf="@+id/text_main_warning_subscription"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/text_main_warning_subscription"
                app:layout_constraintTop_toTopOf="@+id/text_main_warning_subscription"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/container_main_sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="@{safeUnbox(viewModel.isShowGoogleAuth) ? View.VISIBLE : View.GONE}"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/barrier3"
            android:gravity="center_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="@dimen/size_4">

            <com.google.android.gms.common.SignInButton
                android:id="@+id/button_sign_in_main_google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:buttonSize="wide"
                android:onClick="@{viewModel.clickListenerGoogleAuth}"
                android:layout_marginStart="@dimen/size_4"
                android:layout_marginEnd="@dimen/size_4"
                android:layout_marginTop="@dimen/size_4"
                android:layout_marginBottom="@dimen/size_4"/>

            <TextView
                android:id="@+id/text_main_privacy_policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="@color/white"
                android:text="@string/privacy_policy_text"
                android:textSize="@dimen/font_12"/>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_bar_main_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/size_2"
            android:indeterminate="true"
            style="?android:attr/progressBarStyleHorizontal"
            android:visibility="@{safeUnbox(viewModel.isShowHorizontalProgress) ? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/barrier3"
            app:layout_constraintBottom_toTopOf="@+id/barrier3"/>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navigation_view_main_secondary"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_34"
            app:labelVisibilityMode="unlabeled"
            android:visibility="@{safeUnbox(viewModel.isVisibleSecondaryBottomNavigationView) ? View.VISIBLE : View.GONE}"
            app:itemIconTint="@drawable/selector_bottom_navigation"
            app:itemTextColor="@drawable/selector_bottom_navigation"
            app:menu="@menu/menu_main_navigation_secondary"
            app:layout_constraintBottom_toTopOf="@+id/navigation_view_main" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/colorPrimary"
            app:itemBackground="@color/colorPrimary"/>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navigation_view_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:itemIconTint="@drawable/selector_bottom_navigation"
            app:itemTextColor="@drawable/selector_bottom_navigation"
            app:menu="@menu/menu_main_navigation"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/colorPrimary"
            app:itemBackground="@color/colorPrimary"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:background="@color/colorPrimaryDark"
            android:elevation="@dimen/size_8"
            android:visibility="@{safeUnbox(viewModel.isVisibleSecondaryBottomNavigationView) ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@+id/navigation_view_main_secondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="@{safeUnbox(viewModel.isShowLoading) ? View.VISIBLE : View.GONE}"
            android:onClick="@{viewModel.clickListenerLoading}"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toTopOf="@+id/navigation_view_main" android:id="@+id/relativeLayout">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="top"
            app:constraint_referenced_ids="navigation_view_main, navigation_view_main_secondary"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
