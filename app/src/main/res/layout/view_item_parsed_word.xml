<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_item_parsed_word"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="@dimen/size_8"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="@color/card_view_color"
    android:elevation="@dimen/size_1"
    android:layout_marginTop="@dimen/size_1"
    android:layout_marginBottom="@dimen/size_1"
    tools:ignore="UnusedAttribute">

    <TextView
        android:id="@+id/text_item_parsed_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="English word"
        android:layout_weight="1"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_marginEnd="@dimen/size_4"
        android:textColor="@color/text_color_main"/>

    <TextView
        android:id="@+id/text_item_parsed_word_transcription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:ellipsize="end"
        tools:text="[Transcription]"
        android:layout_marginStart="@dimen/size_4"
        android:layout_weight="1"
        android:textColor="@color/text_color_main"/>

    <TextView
        android:id="@+id/text_item_parsed_word_translation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:maxLines="3"
        android:ellipsize="end"
        tools:text="Translation"
        android:layout_marginStart="@dimen/size_4"
        android:layout_weight="1"
        android:textColor="@color/text_color_main"/>

</LinearLayout>
