<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="@dimen/size_8"
    android:background="@color/card_view_color"
    android:elevation="@dimen/size_1"
    android:layout_marginTop="@dimen/size_1"
    android:layout_marginBottom="@dimen/size_1"
    tools:ignore="UnusedAttribute">

    <TextView
        android:id="@+id/text_statistic_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="English word"
        android:layout_weight="1"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginEnd="@dimen/size_4"
        android:textColor="@color/text_color_main"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/progress_bar_statistic_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleHorizontal"
            android:progress="67"
            android:layout_weight="1.5"
            android:secondaryProgressTint="@color/blue"
            android:secondaryProgressTintMode="multiply"/>

        <ProgressBar
            android:id="@+id/progress_bar_statistic_word_secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleHorizontal"
            android:progress="67"
            android:layout_weight="1.5"
            android:secondaryProgressTint="@color/blue"
            android:secondaryProgressTintMode="multiply"/>

    </LinearLayout>

    <TextView
        android:id="@+id/text_statistic_word_translation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:maxLines="2"
        android:ellipsize="end"
        tools:text="Translation"
        android:layout_marginStart="@dimen/size_4"
        android:layout_weight="1"
        android:textColor="@color/text_color_main"/>

</LinearLayout>
