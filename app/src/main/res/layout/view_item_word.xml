<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
                name="clickListener"
                type="android.view.View.OnClickListener"/>
        <variable
                name="longClickListener"
                type="android.view.View.OnLongClickListener"/>
        <variable
                name="word"
                type="relaxeddd.englishnotify.common.Word"/>
    </data>

    <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{clickListener}"
            android:onLongClick="@{longClickListener}"
            style="@style/StyleCardViewSettings"
            android:layout_marginBottom="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_12">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_word"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/text_word_translation"
                    app:layout_constraintTop_toTopOf="parent"
                    android:ellipsize="end"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_word_translation"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/text_word"
                    app:layout_constraintEnd_toStartOf="@+id/barrier2"
                    app:layout_constraintTop_toTopOf="@+id/text_word"
                    android:ellipsize="end"/>

            <TextView
                    android:textSize="@dimen/font_12"
                    android:id="@+id/text_word_transcription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@+id/text_word"
                    app:layout_constraintTop_toBottomOf="@+id/text_word"
                    app:layout_constraintEnd_toStartOf="@+id/text_word_transcription_translation"/>

            <TextView
                    android:textSize="@dimen/font_12"
                    android:id="@+id/text_word_transcription_translation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toStartOf="@+id/barrier2"
                    app:layout_constraintStart_toStartOf="@+id/text_word_translation"
                    app:layout_constraintTop_toBottomOf="@+id/text_word_translation"/>

            <androidx.constraintlayout.widget.Barrier
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/barrier"
                    app:barrierDirection="bottom"
                    app:constraint_referenced_ids="text_word_transcription, text_word_transcription_translation"/>

            <ImageView
                    android:id="@+id/image_word_own"
                    android:layout_width="@dimen/size_16"
                    android:layout_height="@dimen/size_16"
                    app:srcCompat="@drawable/ic_own"
                    app:layout_constraintEnd_toStartOf="@+id/check_box_word_select"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <CheckBox
                    android:layout_width="@dimen/size_36"
                    android:layout_height="@dimen/size_36"
                    android:id="@+id/check_box_word_select"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/text_word_translation"/>

            <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/barrier2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="left"
                    app:constraint_referenced_ids="check_box_word_select, image_word_own"/>

            <LinearLayout
                    android:id="@+id/constraint_word_drop_dawn"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/barrier"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/size_8">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:text=""
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/text_word_sample_eng" app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                            android:text=""
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/text_word_sample_rus" app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="@dimen/size_8"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent"/>

                </LinearLayout>

                <TextView
                        android:text="@{`v2: ` + word.v2.toString()}"
                        android:visibility="@{word.v2.isEmpty() ? View.GONE : View.VISIBLE}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:id="@+id/text_word_v2"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"/>

                <TextView
                        android:text="@{`v3: ` + word.v3.toString()}"
                        android:visibility="@{word.v3.isEmpty() ? View.GONE : View.VISIBLE}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:id="@+id/text_word_v3"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1"/>

                <TextView
                        android:text="@{word.tags.toString()}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:id="@+id/text_word_tags"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"/>

                <TextView
                        android:text=""
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:id="@+id/text_word_timestamp"
                        android:layout_marginTop="8dp"
                        android:textSize="@dimen/font_10"
                        android:layout_weight="1"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>