<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/navigation_graph"
            app:startDestination="@id/fragmentDictionaryMain">

    <fragment android:id="@+id/fragmentDictionaryMain"
              android:name="relaxeddd.englishnotify.ui.dictionary_main.FragmentDictionaryMain"
              android:label="@string/label_fragment_dictionary_main"
              tools:layout="@layout/fragment_dictionary_main">

        <action android:id="@+id/action_fragmentDictionaryMain_to_fragmentWord"
                app:destination="@id/fragmentWord"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_enter_anim"
                app:popExitAnim="@anim/nav_default_exit_anim"/>

    </fragment>

    <fragment android:id="@+id/fragmentNotifications"
              android:name="relaxeddd.englishnotify.ui.notifications.FragmentNotifications"
              tools:layout="@layout/fragment_notifications"
              android:label="@string/label_fragment_notifications"/>

    <fragment android:id="@+id/fragmentSettings"
              android:name="relaxeddd.englishnotify.ui.settings.FragmentSettings"
              android:label="@string/label_fragment_settings"
              tools:layout="@layout/fragment_settings"/>

    <fragment android:id="@+id/fragmentWord"
              android:name="relaxeddd.englishnotify.ui.word.FragmentWord"
              android:label="@string/label_fragment_word"
              tools:layout="@layout/fragment_word"/>

</navigation>